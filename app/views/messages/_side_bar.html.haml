.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
        %ul.top-items__icons
          %li.icons-left
            = link_to new_group_path do
              %i.fa.fa-edit
          %li.icons-right
            = link_to edit_user_path(current_user.id) do
              %i.fa.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__last-message
            = group.show_last_message